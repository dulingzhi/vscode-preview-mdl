{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "allowJs": true,
        "rootDir": ".",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "typings/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test",
        ".vscode"
    ]
}